---
interface Props {
  heading?: string;
  img: string;
  imgAlt?: string;
}

const { img, imgAlt, heading } = Astro.props
---

<div class="bg-no-repeat bg-cover relative h-[90vh] w-full max-w-[100vw]">
  <div
    class="absolute inset-0 m-auto w-full h-full flex justify-center flex-col items-center"
  >
    {
      heading && (
        <h1 class="lg:text-4xl text-3xl text-center font-tomaso tracking tracking-widest text-balance px-4">
          {heading}
        </h1>
      )
    }
    <slot />
  </div>
  <img
    class="absolute cp-v h-full w-full animate-fade object-cover object-center animate-duration-1000 animate-ease-in-out -z-10 brightness-50"
    src={img}
    alt={imgAlt}
  />
  <img
    class="absolute animate-fade object-cover object-center animate-duration-1000 animate-ease-in-out blur-3xl -z-40 brightness-50"
    src={img}
    alt={imgAlt}
  />
</div>
