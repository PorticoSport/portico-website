---
import { getI18N } from "@/i18n"
import BlogItem from "./blogItem.astro"
const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })

const { title, posts } = Astro.props

interface Props {
  title?: string,
  posts: any[]
}
---

