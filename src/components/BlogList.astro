  class="w-full max-w-[1400px] mx-auto py-24 text-pretty px-6 text-left text-xl sm:px-20 p-6 md:p-12 lg:p-20"
>
  <h2 class="text-6xl font-bold text-center mb-14 mt-4">{title || i18n.BLOG.TITLE}</h2>
  <p class="text-center text-2xl text-pretty">Descubre nuestras Ãºltimas noticias</p>
  <div class="list flex flex-col gap-16 lg:flex-row lg:gap-8 my-24">
    {
      posts.map((post) => (
        <BlogItem
          title={post.title.rendered}
          image={post._embedded?.['wp:featuredmedia']?.[0]?.source_url}
          link={`blog/${post.slug}`}
          // date={post.date}
          // description={post.description}
        />
      ))
    }
