---
import Layout from "@/layouts/Layout.astro";
import HeroContainer from "@/components/HeroContainer.astro";
import Breadcrumb from "@/components/Breadcrumb.astro";
import BlogList from "@/components/BlogList.astro";

const response = await fetch("https://porticosport.com/wp-json/wp/v2/posts?_embed")
const posts = await response.json();

const title = 'Página del blog'
---

<Layout title={title} description="Descripción">
  <HeroContainer img="/factory-portico.webp" imgAlt="Página del blog">
    <h1
      class="lg:text-6xl text-5xl text-center font-tomaso tracking tracking-widest text-balance px-4"
    >
      {title}
    </h1>
  </HeroContainer>
  <main class="pb-24 flex flex-col">
    <div class="w-full max-w-[1400px] mx-auto px-6 my-10 text-left md:text-xl">
      <Breadcrumb
        crumbs={[
          { label: "Home", href: "/" },
          { label: "Blog", href: "/blog" },
        ]} />
    </div>
    <BlogList posts={posts} />
  </main>
</Layout>
