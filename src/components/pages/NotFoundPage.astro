---
import Layout from "@/layouts/Layout.astro";
import HeroContainer from "@/components/HeroContainer.astro";
import Breadcrumb from "@/components/Breadcrumb.astro";
import { getI18N, getCurrentLocale } from "@/i18n"

const { hidePagination } = Astro.props
const { url } = Astro
const i18n = getI18N({ host: url.host })
const currentLocale = getCurrentLocale({ host: url.host })

interface Props {
  hidePagination?: boolean;
}
---

<Layout title={i18n.NO_FOUND.TITLE} description={i18n.NO_FOUND.SUBTITLE} currentLocale={currentLocale}>
  <HeroContainer img="/factory-portico.webp" imgAlt={i18n.NO_FOUND.TITLE_ALT} heading={i18n.NO_FOUND.DESCRIPTION} />
</Layout>
