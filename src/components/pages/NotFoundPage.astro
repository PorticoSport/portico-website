---
import Layout from "@/layouts/Layout.astro";
import HeroContainer from "@/components/HeroContainer.astro";
import Breadcrumb from "@/components/Breadcrumb.astro";
import { getI18N } from "@/i18n"

const { currentLocale } = Astro
const { hidePagination } = Astro.props
const i18n = getI18N({ currentLocale })

interface Props {
  hidePagination?: boolean;
}
---

<Layout title={i18n.NO_FOUND.TITLE} description={i18n.NO_FOUND.SUBTITLE}>
  <HeroContainer img="/factory-portico.webp" imgAlt={i18n.NO_FOUND.TITLE_ALT} heading={i18n.NO_FOUND.DESCRIPTION} />
</Layout>
