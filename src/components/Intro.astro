---
import Logo from "./Logo.astro"

import { getI18N } from "../i18n/"

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<section
  id="info"
  class="relative z-10 mx-auto py-24 max-w-[70ch] text-pretty px-6 text-left text-xl sm:px-20"
>
  <h2
    class="mx-auto mb-10 text-wrap text-center text-4xl font-semibold tracking-wide"
  >
    {i18n.INTRO_TITLE}<br />{i18n.INTRO_TITLE_AFTER_BR}
  </h2>
  <p class="text-pretty" set:html={i18n.INTRO_DESCRIPTION_1} />
  <p class="text-pretty" set:html={i18n.INTRO_DESCRIPTION_2} />
</section>
