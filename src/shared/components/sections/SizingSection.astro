---
import Section from "@/shared/components/Section.astro";
import Typography from '@/shared/components/ui/Typography.astro';
import { type Photo } from "@/types/types.ts";


interface Props {
  id: string;
  title: string;
  outdoorText: string;
  indoorText: string;
  outdoorTitle: string;
  indoorTitle: string;
  imageSizing: Photo;
}

const { title, outdoorText, indoorText, imageSizing, id, indoorTitle, outdoorTitle } = Astro.props
---

<Section id={id} className="max-w-none relative border-b-4 border-white">
  <img loading="lazy" src="/bg-ground.webp" alt="Ground" class="absolute top-0 left-0 w-full h-full object-cover z-0 opacity-20" />
  <div class="flex relative flex-col items-center justify-center lg:flex-row gap-8 max-w-[1400px] mx-auto">
    <img src={imageSizing.src} alt={imageSizing.alt} class="aspect-video md:h-72 xl:h-96 z-10" />
    <div class=" z-10">
      <Typography tag="h2" type="secondary" className="font-bold mb-8 uppercase" text={title} />
      {
        outdoorText ? 
        <Typography tag="h3" type="primary" className="font-bold mt-2" text={outdoorTitle} />
        <Typography tag="div" className="mt-4 text-left" text={outdoorText} responsive /> : null
      }
      {
        indoorText ? 
        <Typography tag="h3" type="primary" className="font-bold mt-2" text={indoorTitle} />
        <Typography tag="div" className="mt-4 text-left" text={indoorText} responsive /> : null
      }
  </div>
</Section>