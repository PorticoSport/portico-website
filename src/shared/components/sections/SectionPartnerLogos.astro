import LogoKuka from "@/shared/components/logos/LogoKuka.astro";
import LogoMondo from "@/shared/components/logos/LogoMondo.astro";
import LogoEvenPadelWhite from "@/shared/components/logos/LogoEvenPadelWhite.astro";
import LogoArcelorMittal from "@/shared/components/logos/LogoArcelorMittal.astro";
import LogoHexagonCupWhite from "@/shared/components/logos/LogoHexagonCupWhite.astro";
import LogoJutagrass from "@/shared/components/logos/LogoJutagrass.astro";
import LogoFutwallWhite from "@/shared/components/logos/LogoFutwallWhite.astro";
import Section from "@/shared/components/Section.astro";
import LogoIspoMunich from "@/shared/components/logos/LogoIspoMunich.astro";
