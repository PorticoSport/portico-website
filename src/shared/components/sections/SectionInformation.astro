---
import Button from '@/shared/components/Button.astro';

interface Props {
  image: string;
  subtitle: string;
  title: string;
  text: string;
  buttonUrl: string;
  buttonText: string;
}

const { image, subtitle, title, text, buttonUrl, buttonText } = Astro.props;
---

<section
  class="relative w-full max-w-[100vw] h-[600px]"
>
  <div
    class="absolute inset-0 h-full justify-center z-10 m-auto flex flex-col items-center w-full"
  >
    <slot>
      <div
        class="absolute z-10 animate-fade-up flex justify-center items-center gap-4 lg:gap-8 flex-col"
      >
        {
          subtitle ? (
            <p class="subtitle text-xl lg:text-2xl text-center px-4 text-balance mb-0 text-primary">
              {subtitle}
            </p>
          ) : null
        }
        {
          title ? (
            <h2 class="flex items-center gap-5 text-xl md:text-2xl lg:gap-20 lg:text-3xl font-tomaso px-4 text-center text-balance text-secondary" set:html={title} />
          ) : null
        }
        {
          text ? (<div class="subtitle text-base lg:text-2xl text-center px-4 text-balance mb-0" set:html={text} />) : null
        }
        {
          buttonUrl && buttonText ? (
            <Button
              target="_self"
              url={buttonUrl}
            >
              {buttonText}
            </Button>
          ) : null
        }
      </div>
    </slot>
    <img loading="lazy" src={image} alt={title} class="absolute inset-0 h-full w-full object-cover object-center brightness-50" />
  </div>
  <slot name="bottom" />
</section>