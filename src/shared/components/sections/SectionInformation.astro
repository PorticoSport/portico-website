---
import Button from '@/shared/components/Button.astro';
import Typography from '@/shared/components/ui/Typography.astro';

interface Props {
  image: string;
  subtitle?: string;
  title?: string;
  text?: string;
  buttonUrl?: string;
  buttonText?: string;
}

const { image, subtitle, title, text, buttonUrl, buttonText } = Astro.props;
---

<section class="relative w-full max-w-[100vw] min-h-[600px] border-t-4 border-b-4 border-white overflow-hidden">
  <div class="relative py-14 inset-0 h-full justify-center z-10 m-auto flex flex-col items-center w-full">
    <slot>
      <div class="relative z-10 animate-fade-up flex justify-center items-center gap-4 lg:gap-8 flex-col">
        {
          subtitle && (<Typography tag="p" type="primary" className="text-center px-4 mb-0" responsive text={subtitle} />)
        }
        {
          title && (<Typography tag="h2" type="secondary" className="flex items-center gap-5 lg:gap-20 px-4 text-center font-bold uppercase" responsive text={title} />)
        }
        {
          text && (<Typography tag="div" className="text-center px-4 mb-0" responsive text={text} />)
        }
        {
          buttonUrl && buttonText ? (
            <Button
              target="_self"
              url={buttonUrl}
            >``
              {buttonText}
            </Button>
          ) : null
        }
      </div>
    </slot>
    <img loading="lazy" src={image} alt={title} class="absolute inset-0 w-full object-cover object-center brightness-50" />
  </div>
  <slot name="bottom" />
</section>