---
import Section from "@/shared/components/Section.astro";

import { getI18N } from "../../i18n";

const { language } = Astro.props
const i18n = getI18N({ language })
---

<Section id={i18n.INFO.ID}>
  <h2 class="mx-auto mb-10 text-wrap text-center text-4xl font-semibold tracking-wide">
    {i18n.INTRO_TITLE}<br />{i18n.INTRO_TITLE_AFTER_BR}
  </h2>
  <p class="text-pretty" set:html={i18n.INTRO_DESCRIPTION_1} />
  <p class="text-pretty" set:html={i18n.INTRO_DESCRIPTION_2} />
  <p class="text-pretty" set:html={i18n.INTRO_DESCRIPTION_3} />
</Section>
