---
import Section from "@/shared/components/Section.astro";
import Typography from "@/shared/components/ui/Typography.astro"
import Faqs from "@/shared/components/ui/Faqs.astro"
import Button from '@/shared/components/Button.astro';

interface Props {
  
  title?: string;
  subtitle?: string;
  urlButton?: string;
  urlText?: string;
  buttonTitle?: string;
  items: { question: string; answer: string }[];
  className?: string;
}
import { getI18N } from "../../i18n";


const { language, items, title, subtitle, urlButton, urlText, buttonTitle, className} = Astro.props
const i18n = getI18N({ language })
---

<Section id={i18n.PAGES.HOME.FAQS_SECTION.ID} className={`text-center ${className || ""}`}>
  {title && (
    <Typography
      tag="h2"
      className="uppercase text-center font-bold text-black"
      text={title}
      responsive
    />
  )}

  {subtitle && (
    <Typography
      tag="p"
      className="font-thin mb-12 text-black"
      text={subtitle}
      responsive
    />
  )}

  <Faqs items={items} />

  <div class="hidden md:flex justify-center items-center px-4 ">
    <p class="font-bold text-5xl rotate-90">></p>
  </div>

  {urlButton && urlText ? (
    <div class="text-center mx-auto pt-6">
      <Button url={urlButton} target="_self" title={buttonTitle}>
        {urlText}
      </Button>
    </div>
  ) : null}
</Section>
