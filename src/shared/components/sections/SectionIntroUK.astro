---
import Section from "@/shared/components/Section.astro";
import Typography from "@/shared/components/ui/Typography.astro"

import { getI18N } from "../../i18n";

const { language } = Astro.props
const i18n = getI18N({ language })
---

<Section id={i18n.PAGES.HOME.INTRO_SECTION_UK.ID} className="text-center">
  <Typography tag="h2" className="mx-auto mb-10 text-wrap font-semibold" text={i18n.PAGES.HOME.INTRO_SECTION_UK.TITLE} />
  <div class="flex flex-col md:flex-row gap-2">
    <div class="flex-1">
      <Typography tag="div" className="max-w-[60ch] mx-auto" text={i18n.PAGES.HOME.INTRO_SECTION_UK.DESCRIPTION} />
    </div>
    <div class="flex-1">
      <img src="/porticoSportUK_home.webp" alt="Portico sport uk" />
    </div>
  </div>
</Section>
