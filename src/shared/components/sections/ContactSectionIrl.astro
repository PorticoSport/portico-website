---
import { getI18N } from "@/shared/i18n/";

import Typography from "@/shared/components/ui/Typography.astro";
import Button from "@/shared/components/Button.astro";

interface Props {
  language: string;
}

const { language } = Astro.props;
const i18n = getI18N({ language });
---
{<Typography tag="h2" className="mx-auto mb-8 text-center font-semibold mt-8" text={title} responsive/>||<Typography tag="h2" className="mx-auto mb-8 text-center font-semibold mt-8" text={i18n.PAGES.SECTION_IRL.CONTACT_SECTION.TITLE} responsive/>}

<div class="container mx-auto text-center py-16">
    <div class="flex flex-wrap justify-center gap-8 mb-6">
      
        <div class="flex flex-col items-center text-center w-full sm:w-1/2 md:w-1/4">
