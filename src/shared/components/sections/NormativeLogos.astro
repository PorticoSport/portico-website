---
import Section from "@/shared/components/Section.astro";
import Section from "@/shared/components/Section.astro";
import Typography from "@/shared/components/ui/Typography.astro";
import LogoFedPadel from "@/shared/components/logos/LogoFedPadel.astro";
import LogoEAE from "@/shared/components/logos/LogoEAE.astro";
import LogoAsce from "@/shared/components/logos/LogoAsce.astro";
import LogoInstituteSteel from "@/shared/components/logos/LogoInstituteSteel.astro";
import LogoNormativaPadel from "@/shared/components/logos/LogoNormativaPadel.astro";
import Button from '@/shared/components/Button.astro';
import { getI18N } from "@/shared/i18n/"

interface Props {
  showInfo?: boolean;
  language: string;
  description?: string;
  title?: string;
  subtitle?: string;
}

const { showInfo, language, title, subtitle, description } = Astro.props
const i18n = getI18N({ language })

const heading = showInfo ? title || i18n.NORMATIVE_SECTION_LOGOS.TITLE : null
const subheading = showInfo ? subtitle || i18n.NORMATIVE_SECTION_LOGOS.SUBTITLE : null
const descriptionText = showInfo ? description || i18n.NORMATIVE_SECTION_LOGOS.DESCRIPTION : null
---

<Section heading={heading} subheading={subheading}>
  {
    descriptionText && (
      <Typography tag="div" className="mb-16" text={descriptionText} />
    )
  }
  <div class="logos items-center">
    <LogoEAE />
    <LogoAsce />
    <LogoInstituteSteel />
    <LogoNormativaPadel />
  </div>
<div class="mx auto text-center mt-12">
{urlButton && urlText ? (
  
    <Button   url={urlButton} target="_self" title={buttonTitle}>
      {urlText}
    </Button>
 
) : null}
</div>
</Section>

<style>
  .logos {
    display: grid;
    grid-template-columns: repeat(3,minmax(120px,1fr)) 100px minmax(120px,1fr);
    @apply gap-4;
    margin:0;
  }
.logos svg
{
margin: auto;
}
  @media (max-width: 768px) {
    .logos {
      grid-template-columns: repeat(auto-fill,max(100px));
    }
  }
</style>
