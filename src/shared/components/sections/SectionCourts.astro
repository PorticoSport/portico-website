---
import { getI18N } from "@/shared/i18n";
// import CourtItem from "@/shared/components/CourtItem.astro";
import Section from '@/shared/components/Section.astro';
import CarouselImages from '@/shared/components/CarouselImages';
import ArticleCard from '@/shared/components/ArticleCard.astro';
import { type CourtItem } from '@/types/types'

const { language } = Astro.props
const i18n = getI18N({ language })

const courts = [{
  title: i18n.PAGES.COURTS.MOBILE_COURT.TITLE,
  description: i18n.PAGES.COURTS.MOBILE_COURT.HOME_DESCRIPTION,
  url: i18n.PAGES.COURTS.MOBILE_COURT.ROUTE.URL,
  label: i18n.PAGES.COURTS.MOBILE_COURT.ROUTE.LABEL,
  images: i18n.PAGES.COURTS.MOBILE_COURT.HOME_IMAGES,
}, {
  title: i18n.PAGES.COURTS.PANORAMIC_FLOW_COURT.TITLE,
  description: i18n.PAGES.COURTS.PANORAMIC_FLOW_COURT.HOME_DESCRIPTION,
  url: i18n.PAGES.COURTS.PANORAMIC_FLOW_COURT.ROUTE.URL,
  label: i18n.PAGES.COURTS.PANORAMIC_FLOW_COURT.ROUTE.LABEL,
  images: i18n.PAGES.COURTS.PANORAMIC_FLOW_COURT.HOME_IMAGES,
}, {
  title: i18n.PAGES.COURTS.PANORAMIC_COURT.TITLE,
  description: i18n.PAGES.COURTS.PANORAMIC_COURT.HOME_DESCRIPTION,
  url: i18n.PAGES.COURTS.PANORAMIC_COURT.ROUTE.URL,
  label: i18n.PAGES.COURTS.PANORAMIC_COURT.ROUTE.LABEL,
  images: i18n.PAGES.COURTS.PANORAMIC_COURT.HOME_IMAGES,
}, {
  title: i18n.PAGES.COURTS.CLUB_COURT.TITLE,
  description: i18n.PAGES.COURTS.CLUB_COURT.HOME_DESCRIPTION,
  url: i18n.PAGES.COURTS.CLUB_COURT.ROUTE.URL,
  label: i18n.PAGES.COURTS.CLUB_COURT.ROUTE.LABEL,
  images: i18n.PAGES.COURTS.CLUB_COURT.HOME_IMAGES,
}, {
  title: i18n.PAGES.COURTS.CLUB_PLUS_COURT.TITLE,
  description: i18n.PAGES.COURTS.CLUB_PLUS_COURT.HOME_DESCRIPTION,
  url: i18n.PAGES.COURTS.CLUB_PLUS_COURT.ROUTE.URL,
  label: i18n.PAGES.COURTS.CLUB_PLUS_COURT.ROUTE.LABEL,
  images: i18n.PAGES.COURTS.CLUB_PLUS_COURT.HOME_IMAGES,
}, {
  title: i18n.PAGES.COURTS.FORCE_80_COURT.TITLE,
  description: i18n.PAGES.COURTS.FORCE_80_COURT.HOME_DESCRIPTION,
  url: i18n.PAGES.COURTS.FORCE_80_COURT.ROUTE.URL,
  label: i18n.PAGES.COURTS.FORCE_80_COURT.ROUTE.LABEL,
  images: i18n.PAGES.COURTS.FORCE_80_COURT.HOME_IMAGES,
}, {
  title: i18n.PAGES.COURTS.SINGLE_COURT.TITLE,
  description: i18n.PAGES.COURTS.SINGLE_COURT.HOME_DESCRIPTION,
  url: i18n.PAGES.COURTS.SINGLE_COURT.ROUTE.URL,
  label: i18n.PAGES.COURTS.SINGLE_COURT.ROUTE.LABEL,
  images: i18n.PAGES.COURTS.SINGLE_COURT.HOME_IMAGES,
}, {
  title: i18n.PAGES.COURTS.MINI_COURT.TITLE,
  description: i18n.PAGES.COURTS.MINI_COURT.HOME_DESCRIPTION,
  url: i18n.PAGES.COURTS.MINI_COURT.ROUTE.URL,
  label: i18n.PAGES.COURTS.MINI_COURT.ROUTE.LABEL,
  images: i18n.PAGES.COURTS.MINI_COURT.HOME_IMAGES,
}] as CourtItem[]
---

<Section id={i18n.PAGES.HOME.COURTS_SECTION.ID} heading={i18n.PAGES.HOME.COURTS_SECTION.TITLE} subheading={i18n.PAGES.HOME.COURTS_SECTION.DESCRIPTION} className="max-w-none relative">
  <div class="absolute bg-pattern top-0 bottom-0 -z-10 w-full left-0 opacity-5 border-t border-primary" />
  {
    courts.map(({title, description, images, url, label}, index) => (<ArticleCard
      buttonUrl={url}
      buttonText={label}
      title={title}
      description={description}
      className="mb-4 max-w-[1280px]"
    >
      <div class="flex gap-4" slot="body">
        <CarouselImages client:only images={images} />
      </div>
    </ArticleCard>))
  }
</Section>