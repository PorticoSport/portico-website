let schema;

switch (pathname) {
  case i18n.PAGES.HOME.UK_ROUTE.ROUTE.URL:
    schema = TYPES.UK;
    break;
  case i18n.PAGES.HOME.USA_ROUTE.ROUTE.URL:
    schema = TYPES.USA;
    break;
  default:
    schema = TYPES.DEFAULT;
    break;
}
if (TYPE) {
  schema = TYPES[TYPE] || schema;
}
---

<script type="application/ld+json" set:html={JSON.stringify(schema)} />
