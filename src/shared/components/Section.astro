---
import Typography from '@/shared/components/ui/Typography.astro';

interface Props {
  id?: string;
  className?: string;
  heading?: string;
  heading2?: string;
  subheading?: string;
  classNameHeading?: string;
  classNameSubHeading?: string;
  style?: string;
  heading1?: string;
classNameHeading1?: string;
}

const { className, heading, heading1 ,heading2, subheading, id, style, classNameHeading = '', classNameHeading1 = '', classNameSubHeading = '', classNameHeading2 = ' ' } = Astro.props;
---

<section
  id={id}
  class={`w-full max-w-[1400px] mx-auto py-14 text-pretty text-xl text-left p-6 md:p-12 lg:p-20 ${className}`}
  style={style}
>
  {
    heading && <Typography tag="h3" className={`mx-auto mb-8 text-center font-semibold ${classNameHeading}`} text={heading} />
  }
{
heading2 && <Typography tag="h2" className={`mx-auto mb-8 text-center font-semibold ${classNameHeading2}`} text={heading2} />
}
{
  heading1 && <Typography tag="h1" className={`mx-auto mb-8 text-center font-semibold ${classNameHeading1}`} text={heading1} />
  }
  {
    subheading && <Typography tag="p" className={`text-center mb-8  ${classNameSubHeading}`} text={subheading} type="primary"/>
  }
  <slot />
</section>
