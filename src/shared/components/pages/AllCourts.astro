                            {i18n.PAGES.ALL_COURTS.BUTTON_CLUB_PLUS.LABEL}
                        </Button>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-slate-100 w-full">
            <div class="w-full flex flex-col md:flex-row p-8">
                <div class="w-full md:w-1/2 flex items-center justify-center text-center p-4">
                    <div>
                        <Typography tag="h2" type="black" className="uppercase mb-6 font-bold" text={i18n.PAGES.PANORAMIC_FORCE_80_COURT.TITLE} responsive />
                        <Typography tag="div" type="black" className="mb-6 text-sm md:text-lg lg:text-xl" text={i18n.PAGES.PANORAMIC_FORCE_80_COURT.LITTLE_DESCRIPTION} responsive />
                        <Button size="sm" color="black"
