                        <Button size="sm" color="black"
                            url={i18n.PAGES.ALL_COURTS.BUTTON_MINI_COURT.URL} 
                            title={i18n.PAGES.ALL_COURTS.BUTTON_MINI_COURT.TITLE} target="_self">
                            {i18n.PAGES.ALL_COURTS.BUTTON_MINI_COURT.LABEL}
                        </Button>
                    </div>
                </div>
                <div class="w-full md:w-1/2 flex items-center justify-center">
                    <img 
                    src="/courts-detail/mini/mini-court-contact.webp"
