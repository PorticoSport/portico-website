---
import Layout from "@/shared/layouts/Layout.astro";
import Typography from "@/shared/components/ui/Typography.astro"
import Button from "@/shared/components/Button.astro"
import Breadcrumb from "@/shared/components/Breadcrumb.astro";
import Section from "@/shared/components/Section.astro";
import { getI18N, getCurrentLocale } from "@/shared/i18n";
import { type Photo } from "@/types/types";


interface Props {
  language: string;
  canopiesGallery: Photo[];
}

const { language} = Astro.props;
const i18n = getI18N({ language });
const currentLocale = getCurrentLocale({ language });

---

<Layout
  title={i18n.PAGES.FUNDING.SEO_TITLE}
  description={i18n.PAGES.FUNDING.SEO_DESCRIPTION}
  ogImage={i18n.PAGES.CANOPIES.OG_IMG}
  currentLocale={currentLocale}
bgImage="/heros/_DSC1006.webp"
bgClass="brightness-50"
  language={language}
>
 <main class="flex flex-col gradient-bg relative">
    <div
      class="text-center left-0 top-0 w-full min-h-[40rem] lg:aspect-video flex justify-center items-center flex-col gap-4 px-4"
    >
<Section 
heading1={i18n.PAGES.FUNDING.TITLE} className="uppercase"> </Section>
 </div>

<div class="bg-main relative bg-background">
    <Breadcrumb
      crumbs={[
        { label: i18n.PAGES.HOME.ROUTE.BREADCRUMB, href: i18n.PAGES.HOME.ROUTE.URL },
        { label: i18n.PAGES.FUNDING.ROUTE.LABEL, href: i18n.PAGES.FUNDING.ROUTE.URL },
      ]}
    />

    <div class="intro-section flex flex-wrap w-full h-auto ">
        <div class="w-full md:w-1/2 text-center xs:m-auto">
          <Typography tag="h2" className="font-bold mb-10" text={i18n.PAGES.FUNDING.INTRO_SECTION.TITLE} />
          <Typography tag="div" text={i18n.PAGES.FUNDING.INTRO_SECTION.DESCRIPTION} />
          <Button
            url={i18n.PAGES.FUNDING.INTRO_SECTION.BUTTON.URL}
            title={i18n.PAGES.FUNDING.INTRO_SECTION.BUTTON.TITLE}
          >
            {i18n.PAGES.FUNDING.INTRO_SECTION.BUTTON.LABEL}
          </Button>
        </div>
        <div class="w-full md:w-1/2 md:m-auto">
          <img
            src={i18n.PAGES.FUNDING.INTRO_SECTION.IMG.SRC}
            alt={i18n.PAGES.FUNDING.INTRO_SECTION.IMG.ALT}
            class="img-structure w-full object-cover scale-[85%]"
          />
        </div>
      </div>
      
      <div class="flex flex-wrap justify-center text-center m-auto w-[75%] mt-10 mb-10">
        <Typography 
          tag="h2" 
          className="mb-6 font-bold" 
          text={i18n.PAGES.FUNDING.FINANCING_SECTION.TITLE} 
        />
        <Typography 
          tag="div" 
          className="mb-8" 
          text={i18n.PAGES.FUNDING.FINANCING_SECTION.DESCRIPTION} 
        />
      
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 ">
         
          <article class="flex flex-col items-center gap-4 md:scale-95  ">
            <Typography 
              tag="p" 
              type="primary" 
              className="uppercase" 
              text={i18n.PAGES.FUNDING.FINANCING_SECTION.POINT_1.TITLE} 
            />
            <svg 
              xmlns="http://www.w3.org/2000/svg" 
              fill="none" 
              viewBox="0 0 24 24" 
              stroke-width="1.5" 
              stroke="currentColor" 
              class="w-16 h-16"
            >
              <path 
                stroke-linecap="round" 
                stroke-linejoin="round" 
                d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m3.75 9v7.5m2.25-6.466a9.016 9.016 0 0 0-3.461-.203c-.536.072-.974.478-1.021 1.017a4.559 4.559 0 0 0-.018.402c0 .464.336.844.775.994l2.95 1.012c.44.15.775.53.775.994 0 .136-.006.27-.018.402-.047.539-.485.945-1.021 1.017a9.077 9.077 0 0 1-3.461-.203M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" 
              />
            </svg>
            <Typography 
              tag="div" 
              text={i18n.PAGES.FUNDING.FINANCING_SECTION.POINT_1.DESCRIPTION} 
            />
          </article>
      
         
          <article class="flex flex-col items-center gap-4 md:scale-95">
            <Typography 
              tag="p" 
              type="primary" 
              className="uppercase" 
              text={i18n.PAGES.FUNDING.FINANCING_SECTION.POINT_2.TITLE} 
            />
            <svg 
              xmlns="http://www.w3.org/2000/svg" 
              fill="none" 
              viewBox="0 0 24 24" 
              stroke-width="1.5" 
              stroke="currentColor" 
              class="w-16 h-16"
            >
              <path 
                stroke-linecap="round" 
                stroke-linejoin="round" 
                d="M2.25 18.75a60.07 60.07 0 0 1 15.797 2.101c.727.198 1.453-.342 1.453-1.096V18.75M3.75 4.5v.75A.75.75 0 0 1 3 6h-.75m0 0v-.375c0-.621.504-1.125 1.125-1.125H20.25M2.25 6v9m18-10.5v.75c0 .414.336.75.75.75h.75m-1.5-1.5h.375c.621 0 1.125.504 1.125 1.125v9.75c0 .621-.504 1.125-1.125 1.125h-.375m1.5-1.5H21a.75.75 0 0 0-.75.75v.75m0 0H3.75m0 0h-.375a1.125 1.125 0 0 1-1.125-1.125V15m1.5 1.5v-.75A.75.75 0 0 0 3 15h-.75M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm3 0h.008v.008H18V10.5Zm-12 0h.008v.008H6V10.5Z" 
              />
            </svg>
            <Typography 
            
              tag="div" 
              text={i18n.PAGES.FUNDING.FINANCING_SECTION.POINT_2.DESCRIPTION} 
            />
          </article>
        </div>
      </div>

     
      <Typography tag="h2" className="text-center font-bold mt-16 mb-10" text={i18n.PAGES.FUNDING.PROGRAMS_SECTION.TITLE} />
      <Typography tag="div" className="text-center mb-10" text={i18n.PAGES.FUNDING.PROGRAMS_SECTION.DESCRIPTION} />
            <div class="max-w-7xl mx-auto p-16 bg-blue-950">
             <Typography tag="h3" className="text-center mb-6" text={i18n.PAGES.FUNDING.PROGRAMS_SECTION.SUBTITLE_1} />
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <div class=" text-center">
                      <p class="text-secondary text-5xl font-bold">1.</p>
                        <p class="text-xl font-bold mb-2">{i18n.PAGES.FUNDING.PROGRAMS_SECTION.BENEFITS.BENEFIT_1}</p>                 
                   </div> 
                   <div class=" text-center">
                    <p class="text-secondary text-5xl font-bold">2.</p>
                      <p class="text-xl font-bold mb-2">{i18n.PAGES.FUNDING.PROGRAMS_SECTION.BENEFITS.BENEFIT_2}</p>                 
                 </div> 
                 <div class=" text-center">
                    <p class="text-secondary text-5xl font-bold">3.</p>
                      <p class="text-xl font-bold mb-2">{i18n.PAGES.FUNDING.PROGRAMS_SECTION.BENEFITS.BENEFIT_3}</p>                 
                 </div> 
                 <div class=" text-center">
                    <p class="text-secondary text-5xl font-bold">4.</p>
                      <p class="text-xl font-bold mb-2">{i18n.PAGES.FUNDING.PROGRAMS_SECTION.BENEFITS.BENEFIT_4}</p>                 
                 </div> 
                   
                </div>
                <div class="text-center mt-16">
                <Button 
                url={i18n.PAGES.FUNDING.PROGRAMS_SECTION.BUTTON_1.URL}
                title={i18n.PAGES.FUNDING.PROGRAMS_SECTION.BUTTON_1.TITLE}>
                 {i18n.PAGES.FUNDING.PROGRAMS_SECTION.BUTTON_1.LABEL}
                </Button></div>
            </div>

            <div class="flex flex-wrap w-full h-auto ">
                <div class="w-full md:w-1/2 text-center xs:m-auto gap-6">
                  <Typography tag="h3" className="mb-10"  text={i18n.PAGES.FUNDING.PROGRAMS_SECTION.SUBTITLE_2} />
                  <Typography tag="div" className="mb-10" text={i18n.PAGES.FUNDING.PROGRAMS_SECTION.DESCRIPTION_2} />
                  <Button
                    
                    url={i18n.PAGES.FUNDING.PROGRAMS_SECTION.BUTTON_2.URL}
                    title={i18n.PAGES.FUNDING.PROGRAMS_SECTION.BUTTON_2.TITLE}
                  >
                    {i18n.PAGES.FUNDING.PROGRAMS_SECTION.BUTTON_2.LABEL}
                  </Button>
                </div>
                <div class="w-full md:w-1/2 md:m-auto">
                  <img

                    src={i18n.PAGES.FUNDING.PROGRAMS_SECTION.IMG.SRC}
                    alt={i18n.PAGES.FUNDING.PROGRAMS_SECTION.IMG.ALT}
                    class="img-structure w-full object-cover scale-[85%]"
                  />
                </div>
              </div>
       </div>
    </main>


</Layout>
