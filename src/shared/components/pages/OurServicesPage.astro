---
import Layout from "@/shared/layouts/Layout.astro";
import Typography from "@/shared/components/ui/Typography.astro"
import Breadcrumb from "@/shared/components/Breadcrumb.astro";
import Section from "@/shared/components/Section.astro";
import Button from "../Button.astro";
import { getI18N, getCurrentLocale } from "@/shared/i18n";


interface Props {
  language: string;

}

const { language} = Astro.props;
const i18n = getI18N({ language });
const currentLocale = getCurrentLocale({ language });


---

<Layout
  title={i18n.PAGES.OUR_SERVICES.SEO_TITLE}
  description={i18n.PAGES.OUR_SERVICES.SEO_DESCRIPTION}
  ogImage={i18n.PAGES.OUR_SERVICES.OG_IMG}
  currentLocale={currentLocale}
bgImage="/company/pista (1).jpg"
bgClass="brightness-50"
  language={language}
>
<main class="flex flex-col gradient-bg relative">
    <div
      class="text-center left-0 top-0 w-full min-h-[40rem] lg:aspect-video flex justify-center items-center flex-col gap-4 px-4"
    >
      <Typography tag="h1" className="uppercase mb-6 font-bold" text={i18n.PAGES.OUR_SERVICES.TITLE} responsive />
    </div>
    <div class="bg-main relative bg-background">
      <Breadcrumb
        crumbs={[
          { label: i18n.PAGES.HOME.ROUTE.BREADCRUMB, href: i18n.PAGES.HOME.ROUTE.URL },
          { label: i18n.PAGES.OUR_SERVICES.ROUTE.LABEL, href: i18n.PAGES.OUR_SERVICES.ROUTE.URL },
        ]}
      />

     <Section heading2 = {i18n.PAGES.OUR_SERVICES.SECTION_1.TITLE}>
        <Typography tag="div" text={i18n.PAGES.OUR_SERVICES.SECTION_1.DESCRIPTION} responsive className="text-center mt-12"  />
        
     </Section>
     <section class="max-w-7xl mx-auto px-4 py-16">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          
          
          <div class="rounded-2xl overflow-hidden shadow-lg bg-black/20">
            <img src="/factory/factory-information-section-2.webp" alt="Portico Sport worker" class="w-full h-64 object-cover">
            <div class="p-6">
                <Typography tag="h2" type="primary" className="text-center" size="small" text={i18n.PAGES.OUR_SERVICES.SVC_1.TITLE}/>
                <Typography tag="div" className="text-black" text={i18n.PAGES.OUR_SERVICES.SVC_1.DESCRIPTION}/>

            </div>
          </div>
      
          
          <div class="rounded-2xl overflow-hidden shadow-lg bg-white">
            <img src="/company/Constructio (1).jpeg" alt="Descripción imagen 2" class="w-full h-64 object-cover object-bottom">
            <div class="p-6">
                <Typography tag="h2" type="secondary" className="text-center" size="small" text={i18n.PAGES.OUR_SERVICES.SVC_2.TITLE}/>
              <div class="mt-4 text-gray-600">{i18n.PAGES.OUR_SERVICES.SVC_2.DESCRIPTION}</div>
            </div>
          </div>
      
        </div>
      </section>
      <section class="max-w-7xl mx-auto px-4 py-16">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          
          
          <div class="rounded-2xl overflow-hidden shadow-lg bg-white">
            <img src="/company/MONTAJE MANHEIM ALEMANIA MAR24 (7).jpeg" alt="Portico Sport worker" class="w-full h-64 object-cover">
            <div class="p-6">
                <Typography tag="h2" type="secondary" className="text-center" size="small" text={i18n.PAGES.OUR_SERVICES.SVC_3.TITLE}/>
                <div class="mt-4 text-gray-600">{i18n.PAGES.OUR_SERVICES.SVC_3.DESCRIPTION_1}</div>
                <div class="text-gray-600">{i18n.PAGES.OUR_SERVICES.SVC_3.DESCRIPTION_2}</div>
            </div>
          </div>
      
          
          <div class="rounded-2xl overflow-hidden shadow-lg bg-black/20">
            <img src="/complements/structures2.webp" alt="Descripción imagen 2" class="w-full h-64 object-cover">
            <div class="p-6">
                <Typography tag="h2" type="primary" className="text-center" size="small" text={i18n.PAGES.OUR_SERVICES.SVC_4.TITLE}/>
              <Typography tag="div" className="text-black" text={i18n.PAGES.OUR_SERVICES.SVC_4.DESCRIPTION}/>

            </div>
          </div>
      
        </div>
      </section>
      <section class="max-w-7xl mx-auto px-4 py-16">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          
          
          <div class="rounded-2xl overflow-hidden shadow-lg bg-black/20">
            <img src="/varios/_DSC1032.webp" alt="Portico Sport worker" class="w-full h-64 object-cover">
            <div class="p-6">
                <Typography tag="h2" type="primary" className="text-center" size="small" text={i18n.PAGES.OUR_SERVICES.SVC_5.TITLE}/>
                <Typography tag="div" className="text-black" text={i18n.PAGES.OUR_SERVICES.SVC_5.DESCRIPTION}/>

            </div>
          </div>
      
          
          <div class="rounded-2xl overflow-hidden shadow-lg bg-white">
            <img src="/varios/Instalacion (3).webp" alt="Descripción imagen 2" class="w-full h-64 object-cover">
            <div class="p-6">
                <Typography tag="h2" type="secondary" className="text-center" size="small" text={i18n.PAGES.OUR_SERVICES.SVC_6.TITLE}/>
              <div class="mt-4 text-gray-600">{i18n.PAGES.OUR_SERVICES.SVC_6.DESCRIPTION}</div>
            </div>
          </div>
      
        </div>
      </section>

      <Section >
        <Typography tag="h2" className="text-center font-bold" text={i18n.PAGES.OUR_SERVICES.SVC_4.MINDSPRING_TITLE} responsive
        />
        <img src="/mindspringpadel_logo.svg" alt="Mindspring logo" class="w-60 h-auto mx-auto mb-12 mt-12"
        />
      
      <Typography tag="div" className="mb-6 text-center"text={i18n.PAGES.OUR_SERVICES.SVC_4.MINDSPRING_DESCRIPTION}
      />
    
      <div class="text-center mt-12">
      <Button  url={i18n.PAGES.OUR_SERVICES.SVC_4.BUTTON.URL} title={i18n.PAGES.OUR_SERVICES.SVC_4.BUTTON.TITLE}
      >
        {i18n.PAGES.OUR_SERVICES.SVC_4.BUTTON.LABEL}
      </Button>
    </div>
   </Section>
   <Section>
    <Typography tag="h3" text={i18n.PAGES.OUR_SERVICES.SECTION_2.TITLE} responsive className="mt-4 mb-4 text-center" size="large"/>
         <Typography tag="div" text={i18n.PAGES.OUR_SERVICES.SECTION_2.DESCRIPTION} responsive className="mb-4 text-center"  />
         <div class="mx auto text-center mt-12">
           <Button   
   url={i18n.PAGES.OUR_SERVICES.SECTION_2.BUTTON.URL} target="_self" 
   title={i18n.PAGES.OUR_SERVICES.SECTION_2.BUTTON.TITLE}>
       {i18n.PAGES.OUR_SERVICES.SECTION_2.BUTTON.LABEL}
     </Button>
           
           </div>
       </Section>
    </div>
  </main>
</Layout>

<style>

  @media (min-width: 1280px) {
    .image {
      -webkit-mask: linear-gradient(
        90deg,
        transparent,
        white 0,
        white 30%,
        transparent
      );
      mask: linear-gradient(
        90deg,
        transparent,
        white 0,
        white 30%,
        transparent
      );
    }

    .image-reverse {
      -webkit-mask: linear-gradient(
        -90deg,
        transparent,
        white 0,
        white 30%,
        transparent
      );
      mask: linear-gradient(
        -90deg,
        transparent,
        white 0,
        white 30%,
        transparent
      );
    }
  }
</style>


</script>
