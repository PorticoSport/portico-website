---
import Layout from "@/shared/layouts/Layout.astro";
import SectionGraphicProcess from "@/shared/components/sections/SectionGraphicProcess.astro"
import SectionInfiniteScroll from "@/shared/components/sections/SectionInfiniteScroll.astro"
import Breadcrumb from "@/shared/components/Breadcrumb.astro";
import ItemNumbers from "@/shared/components/ItemNumbers.astro";
import Section from "@/shared/components/Section.astro";
import Typography from "@/shared/components/ui/Typography.astro";
import { CountUp } from "@/shared/components/CountUp";
import { getI18N, getCurrentLocale } from "@/shared/i18n";
import ContactForm from "@/shared/components/forms/ContactForm.astro";

interface Props {
  language: string;
}

const { language } = Astro.props;
const i18n = getI18N({ language });
const currentLocale = getCurrentLocale({ language });

const images = i18n.PAGES.FACTORY.FEATURE_SECTION.IMAGES;
---

<Layout
  title={i18n.PAGES.CLIENT_CONTACT.SEO_TITLE}
  description={i18n.PAGES.CLIENT_CONTACT.SEO_DESCRIPTION}
  currentLocale={currentLocale}
  language={language}
  bgImage="/heros/background-factory.webp"
  bgClass="brightness-50"
>
  <main class="flex flex-col gradient-bg relative">
    <div
      class="text-center left-0 top-0 w-full min-h-[40rem] lg:aspect-video flex justify-center items-center flex-col gap-4 px-4"
    >
      <Typography tag="h1" className="uppercase mb-6 font-bold" text={i18n.PAGES.CLIENT_CONTACT.TITLE} responsive />
      <Typography tag="div" className="text-center px-3" type="primary" text={i18n.PAGES.CLIENT_CONTACT.SUBTITLE} responsive />
    </div>
    <div class="bg-main relative bg-background">
      <Breadcrumb
        crumbs={[
          { label: i18n.PAGES.HOME.ROUTE.LABEL, href: i18n.PAGES.HOME.ROUTE.URL },
          { label: i18n.PAGES.CLIENT_CONTACT.ROUTE.LABEL, href: i18n.PAGES.CLIENT_CONTACT.ROUTE.URL },
        ]}
      />
      <Section
        className="flex flex-col max-w-none my-8 p-0 lg:mb-0"
        style="padding: 0; margin-left: 0; margin-right: 0;"
      >
        <div class="p-4 md:p-8 flex flex-col gap-4 lg:flex-row lg:gap-8 flex-1 justify-center mx-auto max-w-[1400px]">
          <div class="flex-1">
            <Typography tag="h2" text={i18n.PAGES.CLIENT_CONTACT.INTRO_SECTION.TITLE} className="mb-8" responsive type="secondary" />
            <Typography tag="div" text={i18n.PAGES.CLIENT_CONTACT.CONTACT_SECTION.DESCRIPTION} className="mb-8" responsive />
            <div class="p-4 rounded-xl bg-black/75 border border-primary">
              <Typography tag="h3" text={i18n.PAGES.CLIENT_CONTACT.INTRO_SECTION.SUBHEADING} className="mb-8 font-thin" responsive type="primary" />
              <div class="flex flex-col lg:flex-row gap-4">
                <div>
                  <div class="flex items-center gap-4 mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 12a4.5 4.5 0 1 1-9 0 4.5 4.5 0 0 1 9 0Zm0 0c0 1.657 1.007 3 2.25 3S21 13.657 21 12a9 9 0 1 0-2.636 6.364M16.5 12V8.25" />
                    </svg>
                    <a class="text__glowing" href={`mailto:${i18n.PAGES.CLIENT_CONTACT.INTRO_SECTION.DEPARTMENTS.COMPANY.EMAIL}`} class="text-primary">{i18n.PAGES.CLIENT_CONTACT.INTRO_SECTION.DEPARTMENTS.COMPANY.EMAIL}</a>
                  </div>
                  <div class="flex items-center gap-4">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z" />
                    </svg>
                    <strong>{i18n.PAGES.CLIENT_CONTACT.INTRO_SECTION.DEPARTMENTS.PHONE_TITLE}</strong>
                  </div>
                  <div>
                    <a class="pl-12 block text__glowing" href={`tel:${i18n.PAGES.CLIENT_CONTACT.INTRO_SECTION.DEPARTMENTS.COMPANY.PHONE}`} class="text-primary">{i18n.PAGES.CLIENT_CONTACT.INTRO_SECTION.DEPARTMENTS.COMPANY.PHONE_1}</a>
                    <a class="pl-12 block text__glowing" href={`tel:${i18n.PAGES.CLIENT_CONTACT.INTRO_SECTION.DEPARTMENTS.COMPANY.PHONE}`} class="text-primary">{i18n.PAGES.CLIENT_CONTACT.INTRO_SECTION.DEPARTMENTS.COMPANY.PHONE_2}</a>
                    <a class="pl-12 block text__glowing" href={`tel:${i18n.PAGES.CLIENT_CONTACT.INTRO_SECTION.DEPARTMENTS.COMPANY.PHONE}`} class="text-primary">{i18n.PAGES.CLIENT_CONTACT.INTRO_SECTION.DEPARTMENTS.COMPANY.PHONE_3}</a>
                  </div>
                </div>
                <div>
                  <div class="flex items-center gap-4 mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                      <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
                    </svg>                    
                    <strong>{i18n.PAGES.CLIENT_CONTACT.INTRO_SECTION.DEPARTMENTS.ADDRESS_TITLE}</strong>
                  </div>
                  <div>
                    {i18n.PAGES.CLIENT_CONTACT.INTRO_SECTION.DEPARTMENTS.COMPANY.ADDRESS}
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="flex-1">
            <Typography tag="h2" text={i18n.PAGES.CLIENT_CONTACT.CONTACT_SECTION.TITLE} className="mb-8" responsive type="secondary" />
            <ContactForm subject={i18n.PAGES.CLIENT_CONTACT.CONTACT_SECTION.SUBJECT} language={language} sendText={i18n.PAGES.CLIENT_CONTACT.CONTACT_SECTION.SEND_TEXT} hiddenSubject />
          </div>
        </div>
      </Section>
      <SectionGraphicProcess language={language} />
      <Section
        className="flex flex-col max-w-none my-8 p-0 lg:mb-0"
        style="padding: 0; margin-left: 0; margin-right: 0;"
      >
        <div class="flex flex-col xl:flex-row max-w-none">
          <div class="relative w-full flex-1">
            {
              images.map(({id, src, alt}, index:number) => (
                <img
                  loading="lazy"
                  draggable={false}
                  id={id}
                  src={src}
                  alt={alt}
                  class={`${index === 0 ? "relative" : "absolute"} object-cover w-full xl:max-w-[1024px] top-0 left-0 transition-opacity aspect-video xl:aspect-[16/18] xxl:aspect-[16/12] image ${index === 0 ? "opacity-100" : "opacity-0"}`}
                />
              ))
            }
          </div>
          <div class="w-full py-8 px-4 md:px-8 xl:-ml-72 flex-1 z-10 justify-center flex flex-col gap-10">
            <Typography tag="h2" className="mx-auto px-8 mb-8 font-bold uppercase" text={i18n.PAGES.FACTORY.FEATURE_SECTION.TITLE} type="secondary" responsive />
            <Typography tag="div" text={i18n.PAGES.FACTORY.FEATURE_SECTION.DESCRIPTION} responsive className="mb-4" type="primary" />
            <div class="grid grid-cols-1 md:grid-cols-3 gap-y-10">
              <ItemNumbers title={i18n.PAGES.FACTORY.FEATURE_SECTION.COUNTRY_COUNTER.TITLE}>
                + <CountUp client:visible initial={0} final={i18n.PAGES.FACTORY.FEATURE_SECTION.COUNTRY_COUNTER.NUMBER} />
              </ItemNumbers>
              <ItemNumbers title={i18n.PAGES.FACTORY.FEATURE_SECTION.COURTS_COUNTER.TITLE}>
                + <CountUp client:visible initial={0} final={i18n.PAGES.FACTORY.FEATURE_SECTION.COURTS_COUNTER.NUMBER} />
              </ItemNumbers>
              <ItemNumbers title={i18n.PAGES.FACTORY.FEATURE_SECTION.FACTORY_COUNTER.TITLE}>
                <CountUp client:visible initial={0} final={i18n.PAGES.FACTORY.FEATURE_SECTION.FACTORY_COUNTER.NUMBER} />M<sup>2</sup>
              </ItemNumbers>
            </div>
          </div>
        </div>
      </Section>
      <SectionInfiniteScroll language={language} />
    </div>
  </main>
</Layout>

<style>

  @media (min-width: 1280px) {
    .image {
      -webkit-mask: linear-gradient(
        90deg,
        transparent,
        white 0,
        white 30%,
        transparent
      );
      mask: linear-gradient(
        90deg,
        transparent,
        white 0,
        white 30%,
        transparent
      );
    }

    .image-reverse {
      -webkit-mask: linear-gradient(
        -90deg,
        transparent,
        white 0,
        white 30%,
        transparent
      );
      mask: linear-gradient(
        -90deg,
        transparent,
        white 0,
        white 30%,
        transparent
      );
    }
  }
</style>

<script is:inline define:vars={{ images }}>
  const updateImages = (images) => {
    // cambiar a la siguiente imagen cada 3 segundos

    let index = 0;
    setInterval(() => {
      const currentImage = images[index];
      const nextImage = images[index + 1] || images[0];

      const currentImageElement = document.getElementById(currentImage.id);
      const nextImageElement = document.getElementById(nextImage.id);

      if (currentImageElement && nextImageElement) {
        currentImageElement.classList.remove("opacity-100");
        currentImageElement.classList.add("opacity-0");
        nextImageElement.classList.remove("opacity-0");
        nextImageElement.classList.add("opacity-100");
      }

      index = index + 1;
      if (index === images.length) index = 0;
    }, 3000);
  };

  updateImages(images);
</script>
