---
import Layout from "@/shared/layouts/Layout.astro";
import Typography from "@/shared/components/ui/Typography.astro"
import Button from "@/shared/components/Button.astro"
import Breadcrumb from "@/shared/components/Breadcrumb.astro";
import Section from "@/shared/components/Section.astro";
import { getI18N, getCurrentLocale } from "@/shared/i18n";
import { type Photo } from "@/types/types";
import SectionComplements from "@/shared/components/sections/SectionCustomization.astro"
interface Props {
  language: string;
  canopiesGallery: Photo[];
}

const { language, canopiesGallery } = Astro.props;
const i18n = getI18N({ language });
const currentLocale = getCurrentLocale({ language });

const images = i18n.PAGES.CANOPIES.FEATURE_SECTION.IMAGES;
---

<Layout
  title={i18n.PAGES.CUSTOMIZATION.SEO_TITLE}
  description={i18n.PAGES.CUSTOMIZATION.SEO_DESCRIPTION}
  ogImage={i18n.PAGES.CANOPIES.OG_IMG}
  currentLocale={currentLocale}
bgImage="/projects/gallery/projects-7.webp"
bgClass="brightness-50"
  language={language}
>
 <main class="flex flex-col gradient-bg relative">
    <div
      class="text-center left-0 top-0 w-full min-h-[40rem] lg:aspect-video flex justify-center items-center flex-col gap-4 px-4"
    >
<Section 
heading2={i18n.PAGES.CUSTOMIZATION.TITLE} className="uppercase">
</Section>
 </div>
<div class="bg-main relative bg-background ">
    <Breadcrumb
      crumbs={[
        { label: i18n.PAGES.HOME.ROUTE.BREADCRUMB, href: i18n.PAGES.HOME.ROUTE.URL },
        { label: i18n.PAGES.CUSTOMIZATION.ROUTE.LABEL, href: i18n.PAGES.CUSTOMIZATION.ROUTE.URL },
      ]}
    />
    <div class="flex flex-wrap w-full md:w-[95%] m-auto h-auto ">
        <div class="w-full md:w-1/2 text-center xs:m-auto">
          <Typography tag="h2" className="font-bold mb-10" text={i18n.PAGES.CUSTOMIZATION.INTRO_SECTION.TITLE} />
         
          <Typography tag="div"  text={i18n.PAGES.CUSTOMIZATION.INTRO_SECTION.DESCRIPTION}  />

        </div>
        <div class="w-full md:w-1/2 md:m-auto">
          <img
            src={i18n.PAGES.CUSTOMIZATION.CUSTOM_SECTION.IMG.SRC}
            alt={i18n.PAGES.CUSTOMIZATION.CUSTOM_SECTION.IMG.ALT}
            class="img-structure w-full object-cover scale-[85%]"
          />
        </div>
      </div>
<SectionComplements language={language}/>

<div class="flex flex-wrap justify-center items-center m-auto md:w-[70%] p-5 bg-white/5 text-center">
    <Typography 
      tag="h2" 
      className="mb-6 font-bold " 
      text={i18n.PAGES.CUSTOMIZATION.PERSONALIZATION_SECTION.TITLE} 
    />
    <Typography 
      tag="p" 
      className="mb-8" 
      text={i18n.PAGES.CUSTOMIZATION.PERSONALIZATION_SECTION.SUBTITLE} 
    />
  
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 ">
     
      <article class="flex flex-col items-center gap-4 md:scale-95  ">
        <p class="text-primary font-bold uppercase text-2xl">
            {i18n.PAGES.CUSTOMIZATION.PERSONALIZATION_SECTION.POINT_1.TITLE}
        </p>
       
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-16">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 18v-5.25m0 0a6.01 6.01 0 0 0 1.5-.189m-1.5.189a6.01 6.01 0 0 1-1.5-.189m3.75 7.478a12.06 12.06 0 0 1-4.5 0m3.75 2.383a14.406 14.406 0 0 1-3 0M14.25 18v-.192c0-.983.658-1.823 1.508-2.316a7.5 7.5 0 1 0-7.517 0c.85.493 1.509 1.333 1.509 2.316V18" />
          </svg>
          
        <Typography 
          tag="div" 
          
          text={i18n.PAGES.CUSTOMIZATION.PERSONALIZATION_SECTION.POINT_1.DESCRIPTION} 
        />
      </article>
  
     
      <article class="flex flex-col items-center gap-4 md:scale-95">
        <p class="text-primary font-bold uppercase text-2xl">
            {i18n.PAGES.CUSTOMIZATION.PERSONALIZATION_SECTION.POINT_2.TITLE} 
        </p>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-16">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.325.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 0 1 1.37.49l1.296 2.247a1.125 1.125 0 0 1-.26 1.431l-1.003.827c-.293.241-.438.613-.43.992a7.723 7.723 0 0 1 0 .255c-.008.378.137.75.43.991l1.004.827c.424.35.534.955.26 1.43l-1.298 2.247a1.125 1.125 0 0 1-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.47 6.47 0 0 1-.22.128c-.331.183-.581.495-.644.869l-.213 1.281c-.09.543-.56.94-1.11.94h-2.594c-.55 0-1.019-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 0 1-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 0 1-1.369-.49l-1.297-2.247a1.125 1.125 0 0 1 .26-1.431l1.004-.827c.292-.24.437-.613.43-.991a6.932 6.932 0 0 1 0-.255c.007-.38-.138-.751-.43-.992l-1.004-.827a1.125 1.125 0 0 1-.26-1.43l1.297-2.247a1.125 1.125 0 0 1 1.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.086.22-.128.332-.183.582-.495.644-.869l.214-1.28Z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
          </svg>
          
        <Typography 
        
          tag="div" 
          
          text={i18n.PAGES.CUSTOMIZATION.PERSONALIZATION_SECTION.POINT_2.DESCRIPTION} 
        />
      </article>
      <article class="flex flex-col items-center gap-4 md:scale-95  ">
        <p class="text-primary font-bold uppercase text-2xl">
            {i18n.PAGES.CUSTOMIZATION.PERSONALIZATION_SECTION.POINT_3.TITLE} 
        </p>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-16">
            <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125" />
          </svg>
          
        <Typography 
          tag="div" 
          
          text={i18n.PAGES.CUSTOMIZATION.PERSONALIZATION_SECTION.POINT_3.DESCRIPTION} 
        />
      </article>
      <article class="flex flex-col items-center gap-4 md:scale-95  ">
        <p class="text-primary font-bold uppercase text-2xl">
            {i18n.PAGES.CUSTOMIZATION.PERSONALIZATION_SECTION.POINT_4.TITLE} 
        </p>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-16">
            <path stroke-linecap="round" stroke-linejoin="round" d="M18 7.5v3m0 0v3m0-3h3m-3 0h-3m-2.25-4.125a3.375 3.375 0 1 1-6.75 0 3.375 3.375 0 0 1 6.75 0ZM3 19.235v-.11a6.375 6.375 0 0 1 12.75 0v.109A12.318 12.318 0 0 1 9.374 21c-2.331 0-4.512-.645-6.374-1.766Z" />
          </svg>
          
          
        <Typography 
          tag="div" 
          
          text={i18n.PAGES.CUSTOMIZATION.PERSONALIZATION_SECTION.POINT_4.DESCRIPTION} 
        />
      </article>
    </div>
</div>

<div class="text-center md:w-[90%] mt-10 m-auto">
    <Typography tag="h2" className="font-bold mb-10" text={i18n.PAGES.CUSTOMIZATION.BUILDING_SECTION.TITLE} />
   <Typography tag="div" text={i18n.PAGES.CUSTOMIZATION.BUILDING_SECTION.DESCRIPTION}/>

   <div class="text-center m-10">
    <Button
    class="text-base lg:text-base self-center md:self-end py-2 text-center px-4 sm:px-6 md:px-8 w-auto whitespace-normal break-words inline-block"
    url={i18n.PAGES.CUSTOMIZATION.BUILDING_SECTION.BUTTON.URL}
    title={i18n.PAGES.CUSTOMIZATION.BUILDING_SECTION.BUTTON.TITLE}
   
   >
    {i18n.PAGES.CUSTOMIZATION.BUILDING_SECTION.BUTTON.LABEL}
   </Button>
   </div>
</div>



</div>
</main>

</Layout>
