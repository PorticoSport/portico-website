  <script define:vars={{ projectsData, currentLocale }}>
    const countryFlags = {
      ES: "üá™üá∏", UK: "üá¨üáß", FR: "üá´üá∑", DE: "üá©üá™",
      IT: "üáÆüáπ", NL: "üá≥üá±", PR: "üáµüá∑", MX: "üá≤üáΩ",
      CY: "üá®üáæ", PRT: "üáµüáπ", CAR: "üèùÔ∏è", US: "üá∫üá∏",
      IRL: "üáÆüá™", PL: "üáµüá±", GT: "üá¨üáπ", CH: "üá®üá≠"
    };

    let currentProject = null;
    let currentImageIndex = 0;
    let currentSlide = 0;
    let itemsPerPage = 3;
    
    function getItemsPerPage() {
      if (window.innerWidth < 768) return 1;
      if (window.innerWidth < 1024) return 2;
      return 3;
    }
    
    function updateItemsPerPage() {
      const oldItemsPerPage = itemsPerPage;
      itemsPerPage = getItemsPerPage();
      
      if (oldItemsPerPage !== itemsPerPage) {
        currentSlide = 0;
        updateCarousel();
        createIndicators();
      }
    }
    
    const totalPages = () => Math.ceil(projectsData.length / itemsPerPage);

    const projectsContainer = document.getElementById('projects-container');
    const prevButton = document.getElementById('projects-prev');
    const nextButton = document.getElementById('projects-next');
    const indicatorsContainer = document.getElementById('projects-indicators');

    function createIndicators() {
      indicatorsContainer.innerHTML = '';
      const pages = totalPages();
      for (let i = 0; i < pages; i++) {
        const indicator = document.createElement('button');
        indicator.className = `w-2 h-2 md:w-3 md:h-3 rounded-full transition-all ${i === 0 ? 'bg-gray-900 w-6 md:w-8' : 'bg-gray-300'}`;
        indicator.onclick = () => goToSlide(i);
        indicatorsContainer.appendChild(indicator);
      }
    }

    function updateCarousel() {
      const offset = currentSlide * -100;
      projectsContainer.style.transform = `translateX(${offset}%)`;
      
      indicatorsContainer.querySelectorAll('button').forEach((btn, idx) => {
        if (idx === currentSlide) {
          btn.className = 'w-2 h-2 md:w-3 md:h-3 rounded-full transition-all bg-gray-900 w-6 md:w-8';
        } else {
          btn.className = 'w-2 h-2 md:w-3 md:h-3 rounded-full transition-all bg-gray-300';
        }
      });

      prevButton.disabled = currentSlide === 0;
      nextButton.disabled = currentSlide === totalPages() - 1;
    }

    function goToSlide(index) {
      currentSlide = Math.min(index, totalPages() - 1);
      updateCarousel();
    }

    prevButton.addEventListener('click', () => {
      if (currentSlide > 0) {
        currentSlide--;
        updateCarousel();
      }
    });

    nextButton.addEventListener('click', () => {
      if (currentSlide < totalPages() - 1) {
        currentSlide++;
        updateCarousel();
      }
    });

    document.querySelectorAll('.project-card').forEach(card => {
      card.addEventListener('click', () => {
        const projectId = parseInt(card.dataset.projectId);
        currentProject = projectsData.find(p => p.id === projectId);
        openModal(currentProject);
      });
    });

    document.getElementById('close-modal').addEventListener('click', closeModal);
    document.getElementById('project-modal').addEventListener('click', (e) => {
      if (e.target.id === 'project-modal') closeModal();
    });

    document.getElementById('prev-image').addEventListener('click', () => {
      if (currentProject) {
        currentImageIndex = currentImageIndex === 0 ? currentProject.gallery.length - 1 : currentImageIndex - 1;
        updateMainImage();
      }
    });

    document.getElementById('next-image').addEventListener('click', () => {
      if (currentProject) {
        currentImageIndex = currentImageIndex === currentProject.gallery.length - 1 ? 0 : currentImageIndex + 1;
        updateMainImage();
      }
    });

    document.getElementById('prev-project').addEventListener('click', () => {
      if (currentProject) {
        const currentIndex = projectsData.findIndex(p => p.id === currentProject.id);
        const prevIndex = currentIndex === 0 ? projectsData.length - 1 : currentIndex - 1;
        currentProject = projectsData[prevIndex];
        currentImageIndex = 0;
        openModal(currentProject);
      }
    });

    document.getElementById('next-project').addEventListener('click', () => {
      if (currentProject) {
        const currentIndex = projectsData.findIndex(p => p.id === currentProject.id);
        const nextIndex = currentIndex === projectsData.length - 1 ? 0 : currentIndex + 1;
        currentProject = projectsData[nextIndex];
        currentImageIndex = 0;
        openModal(currentProject);
      }
    });

    function openModal(project) {
      currentImageIndex = 0;
      
      document.getElementById('modal-title').textContent = project.name[currentLocale] || project.name.en;
      document.getElementById('modal-description').textContent = project.description[currentLocale] || project.description.en;
      document.getElementById('modal-courts').textContent = project.courts[currentLocale] || project.courts.en;
      document.getElementById('modal-website').textContent = project.website;
      document.getElementById('modal-website').href = project.website;
      document.getElementById('modal-flag').textContent = countryFlags[project.countryCode] || 'üåç';
      document.getElementById('modal-country').textContent = project.country[currentLocale] || project.country.en;
      
      if (project.logo) {
        document.getElementById('modal-logo-img').src = project.logo;
        document.getElementById('modal-logo-img').alt = project.name;
        document.getElementById('modal-logo').style.display = 'flex';
      } else {
        document.getElementById('modal-logo').style.display = 'none';
      }
      
      updateMainImage();
      updateThumbnails();
      
      document.getElementById('project-modal').classList.remove('hidden');
      document.getElementById('project-modal').classList.add('flex');
      document.body.style.overflow = 'hidden';
    }

    function closeModal() {
      document.getElementById('project-modal').classList.add('hidden');
      document.getElementById('project-modal').classList.remove('flex');
      document.body.style.overflow = 'auto';
    }

    function updateMainImage() {
      if (currentProject) {
        document.getElementById('modal-main-image').src = currentProject.gallery[currentImageIndex];
        document.getElementById('modal-main-image').alt = `${currentProject.name} - Image ${currentImageIndex + 1}`;
        
        document.querySelectorAll('.thumbnail-btn').forEach((btn, idx) => {
          if (idx === currentImageIndex) {
            btn.classList.add('border-blue-500', 'scale-105');
            btn.classList.remove('border-gray-200');
          } else {
            btn.classList.remove('border-blue-500', 'scale-105');
            btn.classList.add('border-gray-200');
          }
        });
      }
    }

    function updateThumbnails() {
      const container = document.getElementById('modal-thumbnails');
      container.innerHTML = '';
      
      if (currentProject && currentProject.gallery.length > 1) {
        currentProject.gallery.forEach((img, idx) => {
          const btn = document.createElement('button');
          btn.className = `thumbnail-btn flex-shrink-0 w-14 h-11 sm:w-16 sm:h-12 md:w-20 md:h-16 rounded overflow-hidden border-2 transition-all ${
            idx === currentImageIndex ? 'border-blue-500 scale-105' : 'border-gray-200 hover:border-gray-400'
          }`;
          btn.onclick = () => {
            currentImageIndex = idx;
            updateMainImage();
          };
          
          const img_el = document.createElement('img');
          img_el.src = img;
          img_el.alt = `Thumbnail ${idx + 1}`;
          img_el.className = 'w-full h-full object-cover';
          img_el.loading = 'lazy';
          
          btn.appendChild(img_el);
          container.appendChild(btn);
        });
      }
    }

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') closeModal();
      if (e.key === 'ArrowLeft' && document.getElementById('project-modal').classList.contains('flex')) {
        document.getElementById('prev-image').click();
      }
      if (e.key === 'ArrowRight' && document.getElementById('project-modal').classList.contains('flex')) {
        document.getElementById('next-image').click();
      }
    });

    let resizeTimeout;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimeout);
      resizeTimeout = setTimeout(() => {
        updateItemsPerPage();
      }, 250);
    });

    updateItemsPerPage();
    createIndicators();
    updateCarousel(); 
  </script>

