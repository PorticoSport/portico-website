---
interface Props {
  id?: string
  class?: string
  target?: string
  url: string
  size?: 'sm' | 'md' | 'lg';
}

const { url, target, class: className, size = 'md', ...rest } = Astro.props

const sizeClasses = {
  sm: 'text-sm px-2 py-1 lg:text-base',
  md: 'text-base px-3 py-2 lg:text-lg',
  lg: 'text-lg px-5 py-3 lg:text-xl',
}
---

<a
  href={url}
  target=`${target ?? '_blank'}`
  rel="noopener noreferrer"
  class:list={[
    sizeClasses[size],
    "w-fit",
    "font-medium",
    "no-underline",
    "border",
    "border-solid",
    "border-white",
    "rounded-full",
    "uppercase",
    className,
  ]}
  {...rest}
>
  <slot />
</a>

<style>
  a {
    transition:
      text-shadow 0.5s ease-out,
      box-shadow 0.3s ease-out;
  }

  a:hover {
    box-shadow: 0 0 16px #fff8;
    text-shadow:
      0 0 10px rgba(255, 255, 255, 0.8),
      0 0 20px rgba(255, 255, 255, 0.8),
      0 0 22px rgba(255, 255, 255, 0.8),
      0 0 40px rgba(66, 220, 219, 0.8),
      0 0 60px rgba(66, 220, 219, 0.8),
      0 0 80px rgba(66, 220, 219, 0.5),
      0 0 100px rgba(66, 220, 219, 0.5),
      0 0 140px rgba(66, 220, 219, 0.5),
      0 0 200px rgba(66, 220, 219, 0.5);
  }
</style>
