---
const { crumbs } = Astro.props;

interface Crumb {
  label: string;
  href: string;
}

interface Props {
  crumbs: Crumb[];
}
---

<nav class="w-full max-w-[1400px] mx-auto md:text-xl text-left px-6 md:px-12 lg:px-20 mt-4">
  <ul class="flex flex-row gap-2">
    {
      crumbs
        .map((crumb, index) => (
          <li class="flex gap-1 items-center">
            {index < crumbs.length - 1 ? (
              <a class="text-primary hover:text-secondary transition-colors" href={crumb.href}>{crumb.label}</a>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="m9 18 6-6-6-6" />
              </svg>
            ) : (
              <span class="line-clamp-1 lowercase" title={crumb.label}>{crumb.label}</span>
            )}
          </li>
        ))
    }
  </ul>
</nav>
