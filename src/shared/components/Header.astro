---
import LogoWhite from "@/shared/components/logos/Logo.astro";
import { getI18N } from "../i18n/";
import LanguageSelector from "./LanguageSelector.astro";
import HeaderLink from "./HeaderLink.astro";
import { capitalize } from "@/libraries/utils";

const { language } = Astro.props;
const i18n = getI18N({ language });

const LINKS = [
  
  {
    text: i18n.PAGES.ROUTE.LABEL,
    children: [
  {
    href: i18n.PAGES.OUR_COMPANY.ROUTE.URL,
    text: i18n.PAGES.OUR_COMPANY.ROUTE.LABEL,
  },{
    href: i18n.PAGES.OUR_SERVICES.ROUTE.URL,
    text: i18n.PAGES.OUR_SERVICES.ROUTE.LABEL,
  },{
    href: i18n.PAGES.CREDENTIALS.ROUTE.URL,
    text: i18n.PAGES.CREDENTIALS.ROUTE.LABEL,
  },{
    href: i18n.PAGES.FACTORY.ROUTE.URL,
    text: i18n.PAGES.FACTORY.ROUTE.LABEL,
  },{
    href: i18n.PAGES.PARTNERS.ROUTE.URL,
    text: i18n.PAGES.PARTNERS.ROUTE.LABEL,
  },{
    href: i18n.PAGES.NEWS.ROUTE.URL,
    text: i18n.PAGES.NEWS.ROUTE.LABEL,
  },
      
    ],
  },
  {
    text: i18n.PAGES.ALL_COURTS.ROUTE.LABEL,
    href: i18n.PAGES.ALL_COURTS.ROUTE.URL,
    nofollow: true,
    children: [
      {
        href: i18n.PAGES.ACE_COURT.ROUTE.URL,
        text: i18n.PAGES.ACE_COURT.NAME,
        title: i18n.PAGES.ACE_COURT.ROUTE.TITLE,
      },
      {
        href: i18n.PAGES.CLUB_COURT.ROUTE.URL,
        text: i18n.PAGES.CLUB_COURT.NAME,
        title: i18n.PAGES.CLUB_COURT.ROUTE.TITLE,
      },
      {
        href: i18n.PAGES.CLUB_PLUS.ROUTE.URL,
        text: i18n.PAGES.CLUB_PLUS.NAME,
        title: i18n.PAGES.CLUB_PLUS.ROUTE.TITLE,
      },
      {
        href: i18n.PAGES.PANORAMIC_COURT.ROUTE.URL,
        text: i18n.PAGES.PANORAMIC_COURT.NAME,
        title: i18n.PAGES.PANORAMIC_COURT.ROUTE.TITLE,
      },
      {
        href: i18n.PAGES.PANORAMIC_PLUS.ROUTE.URL,
        text: i18n.PAGES.PANORAMIC_PLUS.NAME,
        title: i18n.PAGES.PANORAMIC_PLUS.ROUTE.TITLE,
      },
      {
        href: i18n.PAGES.TOURNAMENT_COURT.ROUTE.URL,
        text: i18n.PAGES.TOURNAMENT_COURT.NAME,
        title: i18n.PAGES.TOURNAMENT_COURT.ROUTE.TITLE,
      },
      {
        href: i18n.PAGES.PANORAMIC_FORCE_80_COURT.ROUTE.URL,
        text: i18n.PAGES.PANORAMIC_FORCE_80_COURT.NAME,
        title: i18n.PAGES.PANORAMIC_FORCE_80_COURT.ROUTE.TITLE,
      },
      {
        href: i18n.PAGES.SINGLE_COURT.ROUTE.URL,
        text: i18n.PAGES.SINGLE_COURT.NAME,
        title: i18n.PAGES.SINGLE_COURT.ROUTE.TITLE,
      },
      {
        href: i18n.PAGES.MINI_COURT.ROUTE.URL,
        text: i18n.PAGES.MINI_COURT.NAME,
        title: i18n.PAGES.MINI_COURT.ROUTE.TITLE,
      }, {
        href: i18n.PAGES.MOBILE_COURT.ROUTE.URL,
        text: i18n.PAGES.MOBILE_COURT.NAME,
        title: i18n.PAGES.MOBILE_COURT.ROUTE.TITLE,
      },{
        href: i18n.PAGES.ELEVATED_PLATFORM.ROUTE.URL,
        text: i18n.PAGES.ELEVATED_PLATFORM.ROUTE.LABEL,
      },
      {
        href: i18n.PAGES.PICKLEBALL.ROUTE.URL,
        text: i18n.PAGES.PICKLEBALL.ROUTE.LABEL,
      }
    ],
  },
  
  {
    href: i18n.PAGES.CANOPIES.ROUTE.URL,
    text: i18n.PAGES.CANOPIES.ROUTE.LABEL,
  },
  {
    href: i18n.PAGES.MODULAR_UNITS.ROUTE.URL,
    text: i18n.PAGES.MODULAR_UNITS.ROUTE.LABEL,
  },
  {
    href: i18n.PAGES.PROJECTS.ROUTE.URL,
    text: i18n.PAGES.PROJECTS.ROUTE.LABEL,
  },
  
  {
    href: i18n.PAGES.AUTHORIZED_DISTRIBUTOR.ROUTE.URL,
    text: i18n.PAGES.AUTHORIZED_DISTRIBUTOR.ROUTE.LABEL,
  },
  {
    text: i18n.PAGES.CONTACT.ROUTE.LABEL,
    children: [
      {
        href: i18n.PAGES.CLIENT_CONTACT.ROUTE.URL,
        text: i18n.PAGES.CLIENT_CONTACT.ROUTE.LABEL,
      },
      {
        href: i18n.PAGES.WORK_WITH_US.ROUTE.URL,
        text: i18n.PAGES.WORK_WITH_US.ROUTE.LABEL,
      },
    ],
  },
];
---
<header id="header-nav" class="fixed top-0 z-30 w-full px-6 py-2">
  <div class="mx-auto flex max-w-7xl items-center justify-between">
    <div class="flex flex-grow basis-0 z-30">
      <HeaderLink
        checkActive={false}
        href="/"
        class="group relative"
        aria-label={i18n.HEADER.LOGO}
      >
        <LogoWhite
          class="h-auto w-40 blur-sm absolute inset-0 m-auto opacity-0 group-hover:opacity-100 transition-opacity duration-300"
        />
        <LogoWhite class="h-auto w-60 items-left" />
      </HeaderLink>
    </div>

    <!-- Menú de navegación para pantallas grandes -->
    <nav
      class="hidden xl:flex flex-grow xl:basis-0 w-full gap-x-4 xl:justify-center font-medium items-center"
    >
      {
        LINKS.map(({ href, text, children = [] }) =>
          children.length ? (
            <div
              data-dropdown-toggle="dropdownNavbar"
              class="relative gap-2 w-max group"
            >
              <HeaderLink class={`flex justify-center items-center  text__glowing__header ${!href ? 'pointer-events-none' : ''}`} href={href || '#'}>
                {`${capitalize(text)} `}
                <svg
                  class="w-2.5 h-2.5 ms-2.5 text__glowing__header "
                  aria-hidden="true"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 10 6"
                >
                  <path
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="m1 1 4 4 4-4"
                  />
                </svg>
              </HeaderLink>
              <div
                id="dropdownNavbar"
                class={`z-10 hidden absolute left-1/2 top-1/3 -translate-x-1/2 translate-y-4 font-normal group-hover:block ${text === i18n.PAGES.COURTS.ROUTE.LABEL ? "w-52" : "w-40"}`}
              >
                <ul
                  class="py-2 text-sm flex flex-col gap-4 w-full bg-white/90 rounded-xl border"
                  aria-labelledby="dropdownLargeButton"
                >
                  {children.map(({ href, text, title }) => (
                    <li class="text-center">
                      <HeaderLink class={`text__glowing__header  w-full text-lg`} href={href} title={title}>
                        {capitalize(text)}
                      </HeaderLink>
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          ) : (
            <HeaderLink class={`w-max text__glowing__header  ${!href ? 'pointer-events-none' : ''}`} href={href || '#'}>
              {capitalize(text)}
            </HeaderLink>
          )
        )
      }
      <LanguageSelector language={language} />
    </nav>

    <!-- Botón de menú para pantallas pequeñas -->
    <button
      id="menu-toggle"
      class="flex flex-grow basis-0 justify-end text-2xl xl:hidden z-50 text-black"
    >
      <span id="menu-icon">☰</span>
    </button>
  </div>

  <!-- Menú de navegación móvil para pantallas pequeñas -->
  <nav
  id="mobile-menu"
  class="bg-white/90 -translate-y-full gap-4 transition-transform xl:hidden w-full flex flex-col justify-center items-center text-center text-2xl fixed top-0 left-0 right-0 h-dvh overflow-y-auto"
>
    {
    LINKS.map(({ href, text, children }) => {
      const hasDropdown = children && children.length > 0;
  
      if (hasDropdown) {
        return (
          <div class="relative w-full px-4">
            <div class="flex justify-center items-center gap-2">
              <HeaderLink 
                class="text-black mobile-dropdown-link"
                href={href || '#'}
              >
                {capitalize(text)}
              </HeaderLink>
              <button 
                class="mobile-dropdown-trigger p-1"
                data-dropdown-id={`mobile-dropdown-${text.replace(/\s+/g, '-')}`}
                aria-label={`Toggle ${text} menu`}
              >
                <svg
                  class="w-4 h-4 mobile-dropdown-arrow transition-transform text-black"
                  aria-hidden="true"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 10 6"
                >
                  <path
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="m1 1 4 4 4-4"
                  />
                </svg>
              </button>
            </div>
            <div
              id={`mobile-dropdown-${text.replace(/\s+/g, '-')}`}
              class="mobile-dropdown-content hidden absolute left-1/2 -translate-x-1/2 top-full mt-2 w-11/12 max-w-xs z-50"
            >
              <ul class="py-2 text-base flex flex-col gap-3 w-full bg-white shadow-lg rounded-xl border max-h-96 overflow-y-auto">
                {children.map(({ href, text }) => (
                  <li class="text-center">
                    <HeaderLink class="text-black w-full item-link" href={href}>
                      {capitalize(text)}
                    </HeaderLink>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        );
      }
  
      return (
        <HeaderLink class="text-black item-link" href={href || '#'}>
          {capitalize(text)}
        </HeaderLink>
      );
    })
  }
    <LanguageSelector language={language} />
  </nav>
</header>

<script>
  document.addEventListener("astro:page-load", () => {
    const menuToggle = document.getElementById("menu-toggle");
    const mobileMenu = document.getElementById("mobile-menu");
    const link = document.querySelectorAll("#mobile-menu .item-link, #mobile-menu .mobile-dropdown-link");
    const menuIcon = document.getElementById("menu-icon");

    if (!menuToggle || !mobileMenu || !menuIcon) {
      return;
    }

    menuToggle.addEventListener("click", function () {
      mobileMenu.classList.toggle("translate-y-0");
      document.body.classList.toggle("overflow-hidden");
      menuIcon.textContent = menuIcon.textContent === "☰" ? "✕" : "☰";
    });

    link.forEach((item) =>
      item.addEventListener("click", function (e) {
        // Solo cerrar el menú si no es un dropdown toggle
        if (!e.target.closest('.mobile-dropdown-trigger')) {
          mobileMenu.classList.remove("translate-y-0");
          document.body.classList.remove("overflow-hidden");
          menuIcon.textContent = "☰";
        }
      })
    );

    // Handle mobile dropdown toggles
    const dropdownTriggers = document.querySelectorAll(".mobile-dropdown-trigger");
    dropdownTriggers.forEach((trigger) => {
      trigger.addEventListener("click", function(e) {
        e.preventDefault();
        e.stopPropagation();
        const dropdownId = this.getAttribute("data-dropdown-id");
        const dropdown = document.getElementById(dropdownId);
        const arrow = this.querySelector(".mobile-dropdown-arrow");
        
        // Close all other dropdowns
        document.querySelectorAll(".mobile-dropdown-content").forEach((d) => {
          if (d.id !== dropdownId) {
            d.classList.add("hidden");
          }
        });
        document.querySelectorAll(".mobile-dropdown-arrow").forEach((a) => {
          if (a !== arrow) {
            a.classList.remove("rotate-180");
          }
        });
        
        if (dropdown) {
          dropdown.classList.toggle("hidden");
          arrow?.classList.toggle("rotate-180");
        }
      });
    });

    // Close dropdowns when clicking outside or on a dropdown link
    document.addEventListener("click", function(e) {
      const isDropdownTrigger = e.target.closest(".mobile-dropdown-trigger");
      const isDropdownLink = e.target.closest(".mobile-dropdown-content .item-link");
      
      if (!isDropdownTrigger) {
        document.querySelectorAll(".mobile-dropdown-content").forEach((d) => {
          d.classList.add("hidden");
        });
        document.querySelectorAll(".mobile-dropdown-arrow").forEach((a) => {
          a.classList.remove("rotate-180");
        });
      }

      // Close mobile menu when clicking a dropdown item
      if (isDropdownLink && mobileMenu) {
        setTimeout(() => {
          mobileMenu.classList.remove("translate-y-0");
          document.body.classList.remove("overflow-hidden");
          if (menuIcon) menuIcon.textContent = "☰";
        }, 100);
      }
    });
  });

  document.addEventListener("astro:page-load", () => {
    const currentPath = window.location.pathname;
    const isSpecialPage = currentPath.includes("/index.astro");

    if (isSpecialPage) {
      document.querySelectorAll(".language-flag").forEach(flag => {
        flag.addEventListener("click", (e) => {
          e.preventDefault();
          const lang = flag.getAttribute("data-lang");
          window.location.href = `/${lang}/`;
        });
      });
    }
  });
</script>
