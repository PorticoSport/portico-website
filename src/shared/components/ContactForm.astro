---
import { getI18N } from "@/shared/i18n";

interface Props {
  language: string;
  sendText?: string;
  subject?: string;
  hiddenSubject?: boolean;
}

const { language, sendText, hiddenSubject, subject } = Astro.props
const i18n = getI18N({ language })
---

<form action="https://formbold.com/s/FORM_ID" method="POST" class="flex-1">
  <div class="mb-5">
    <label for="name" class="mb-3 block text-base font-medium">
      {i18n.CONTACT.FORM.NAME}
    </label>
    <input
      type="text"
      name="name"
      id="name"
      placeholder={i18n.CONTACT.FORM.NAME}
      required
      class="w-full rounded-full border bg-white py-3 px-6 text-base font-medium text-[#6B7280] focus:border-primary focus:ring-2 focus:ring-primary outline-none autofill:bg-black/30 valid:bg-black/60 valid:text-white valid:border-primary"
    />
  </div>
  <div class="mb-5">
    <label for="email" class="mb-3 block text-base font-medium">
      {i18n.CONTACT.FORM.EMAIL}
    </label>
    <input
      type="email"
      name="email"
      id="email"
      placeholder={i18n.CONTACT.FORM.EMAIL_PLACEHOLDER}
      required
      class="w-full rounded-full border bg-white py-3 px-6 text-base font-medium text-[#6B7280] focus:border-primary focus:ring-2 focus:ring-primary outline-none autofill::bg-black/30 valid:bg-black/60 valid:text-white valid:border-primary"
    />
  </div>
  <div class="mb-5">
    <label for="phone" class="mb-3 block text-base font-medium">
      {i18n.CONTACT.FORM.PHONE}
    </label>
    <input
      type="text"
      name="phone"
      id="phone"
      placeholder={i18n.CONTACT.FORM.PHONE_PLACEHOLDER}
      required
      class="w-full rounded-full border bg-white py-3 px-6 text-base font-medium text-[#6B7280] focus:border-primary focus:ring-2 focus:ring-primary outline-none autofill::bg-black/30 valid:bg-black/60 valid:text-white valid:border-primary"
    />
  </div>
  <div class="mb-5">
    {
      !hiddenSubject && (
        <label for="subject" class="mb-3 block text-base font-medium">
          {i18n.CONTACT.FORM.SUBJECT}
        </label>
      )
    }
    <input
      value={subject || ""}
      hidden={hiddenSubject}
      type="text"
      name="subject"
      id="subject"
      placeholder={i18n.CONTACT.FORM.SUBJECT_PLACEHOLDER}
      required
      class="w-full rounded-full border bg-white py-3 px-6 text-base font-medium text-[#6B7280] focus:border-primary focus:ring-2 focus:ring-primary outline-none autofill::bg-black/30 valid:bg-black/60 valid:text-white valid:border-primary"
    />
  </div>
  <div class="mb-5">
    <label for="message" class="mb-3 block text-base font-medium">
      {i18n.CONTACT.FORM.MESSAGE}
    </label>
    <textarea
      rows="4"
      name="message"
      id="message"
      placeholder="Type your message"
      required
      class="w-full resize-none rounded-3xl border bg-white py-3 px-6 text-base font-medium text-[#6B7280] focus:border-primary focus:ring-2 focus:ring-primary outline-none autofill::bg-black/30 valid:bg-black/60 valid:text-white valid:border-primary"
    ></textarea>
  </div>
  <div>
    <button
      class="w-fit text-lg font-medium no-underline px-5 py-3 border border-solid border-white rounded-full uppercase"
    >
      {sendText || i18n.CONTACT.FORM.SEND}
    </button>
  </div>
</form>

<style>
  button {
    transition:
      text-shadow 0.5s ease-out,
      box-shadow 0.3s ease-out;
  }

  button:hover {
    box-shadow: 0 0 16px #fff8;
    text-shadow:
      0 0 10px rgba(255, 255, 255, 0.8),
      0 0 20px rgba(255, 255, 255, 0.8),
      0 0 22px rgba(255, 255, 255, 0.8),
      0 0 40px rgba(66, 220, 219, 0.8),
      0 0 60px rgba(66, 220, 219, 0.8),
      0 0 80px rgba(66, 220, 219, 0.5),
      0 0 100px rgba(66, 220, 219, 0.5),
      0 0 140px rgba(66, 220, 219, 0.5),
      0 0 200px rgba(66, 220, 219, 0.5);
  }
</style>