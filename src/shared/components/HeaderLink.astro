---
interface Props {
  checkActive?: boolean
  title?: string
  href: string
  class?: string
}

const {
  href,
  class: className,
  checkActive = true,
  ...restOfProps
} = Astro.props

const currentPath = Astro.url.pathname
const destination = href
const isActive = currentPath === destination && checkActive
---

<a
  href={destination}
  class:list={[className, isActive && "border-b-2 border-white"]}
  {...restOfProps}
>
  <slot />
</a>
