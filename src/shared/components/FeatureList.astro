---
import CheckIcon from "@/shared/components/icons/CheckIcon.astro";
import Typography from '@/shared/components/ui/Typography.astro';

interface Props {
  list: string[];
  className?: string;
}

const { list = [], className } = Astro.props;
---

<ul class={`flex flex-col gap-y-10 pl-4 font-thin text-base ${className}`}>
  {
    list.map((item: string) => (
      <li class="flex gap-x-6 items-center text-base lg:text-xl">
        <CheckIcon className="w-8 h-8" />
        <Typography tag="span" text={item} className="flex-1" responsive />
      </li>
    ))
  }
</ul>
